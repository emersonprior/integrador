    @model EmpresaDeViajes.ViewModels.ViewModelCompra

@{
    ViewBag.Title = "Crear Compra";
}

<h2>Crear</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Compra</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

       
        <div class="form-group">
            @Html.LabelFor(m => m.Clientes, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownListFor(m => m.Compra.Cliente.Id, Model.Clientes, new { htmlAttributes = new { @class = "form-control" } })
            </div>
        </div>
        <h3>ExcursionesDisponibles</h3>
        <table class="table">
            <tr>
                <th>
                    <p>Id</p>
                </th>
                <th>
                    <p>Nombre</p>
                </th>
                <th>
                    <p>Descripción</p>
                </th>
                <th>
                    <p>Duración</p>
                </th>
                <th>
                    <p>Costo</p>
                </th>
                <th></th>

            </tr>

            @foreach (var item in Model.Excursiones)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duración)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Costo)
                    </td>
                    <td>
                        @Html.ActionLink("TomarExcursion", "TomarExcursion", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
        <h3>ExcursionesSeleccionadas</h3>
        <table class="table">
            <tr>
                <th>
                    <p>Id</p>
                </th>
                <th>
                    <p>Nombre</p>
                </th>
                <th>
                    <p>Descripción</p>
                </th>
                <th>
                    <p>Duración</p>
                </th>
                <th>
                    <p>Costo</p>
                </th>
                <th></th>

            </tr>

            @foreach (var item in Model.Compra.CompraExcursion)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Descripcion)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Duración)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Costo)
                    </td>
                    <td>
                        @Html.ActionLink("QuitarExcursion", "QuitarExcursion", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>

        <h3>TransportesDisponibles</h3>
        <table class="table">
            <tr>
                <th>
                    <p>Id</p>
                </th>
                <th>
                    <p>CiudadOrigen</p>
                </th>
                <th>
                    <p>CiudadDestino</p>
                </th>
                <th>
                    <p>Tipo</p>
                </th>
                <th>
                    <p>Costo</p>
                </th>
                <th></th>

            </tr>

            @foreach (var item in Model.Transportes)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CiudadOrigen.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CiudadDestino.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Costo)
                    </td>
                    <td>
                        @Html.ActionLink("TomarTransporte", "TomarTransporte", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
        <h3>TransportesSeleccionados</h3>
        <table class="table">
            <tr>
                <th>
                    <p>Id</p>
                </th>
                <th>
                    <p>CiudadOrigen</p>
                </th>
                <th>
                    <p>CiudadDestino</p>
                </th>
                <th>
                    <p>Tipo</p>
                </th>
                <th>
                    <p>Costo</p>
                </th>
                <th></th>

            </tr>

            @foreach (var item in Model.Compra.CompraTransporte)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CiudadOrigen.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CiudadDestino.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Tipo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Costo)
                    </td>
                    <td>
                        @Html.ActionLink("QuitarTransporte", "QuitarTransporte", new { id = item.Id })
                    </td>
                </tr>
            }

        </table>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Finalizar Compra" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Indice", "Index")
</div>
