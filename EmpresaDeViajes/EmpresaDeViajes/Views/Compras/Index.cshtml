@model IEnumerable<EmpresaDeViajes.Models.Compra>

@{
    ViewBag.Title = "Indice de Compras";
}

<h2>Indice de Compras</h2>

<p>
    @Html.ActionLink("Crear Nueva Compra", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.NombreApellido)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cliente.Ci)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CostoTotal)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Fecha)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.NombreApellido)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cliente.Ci)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostoTotal)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Fecha)
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { id = item.Id })
        </td>
    </tr>
}

</table>


<input type="button" value="Imprimir" onclick="window.print()" />