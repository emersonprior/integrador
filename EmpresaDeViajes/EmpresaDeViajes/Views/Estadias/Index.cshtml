@model IEnumerable<EmpresaDeViajes.Models.Estadia>

@{
    ViewBag.Title = "Indice de Estadias";
}

<h2>Indice de Estadias</h2>

<p>
    @Html.ActionLink("Crear Nueva Estadia", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Dias)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Destino.Nombre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Dias)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Destino.Nombre)
        </td>
        <td>
            @Html.ActionLink("Detalles", "Details", new { id=item.Id }) |
            @Html.ActionLink("Borrar", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

<input type="button" value="Imprimir" onclick="window.print()" />